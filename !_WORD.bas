10 CLS : KEY OFF
20 INPUT " Please key in the WORD ... ",A$ : IF A$="" THEN KEY ON : END
30 WX=720 : WY=347 : LX=LEN(A$)*9 : LY=14 : DIM U%(LX,LY,2)
40 INPUT "XXXXX :",A
50 INPUT "YYYYY :",B
60 A=A-(A=0) : B=B-(B=0)
70 IF ABS(A)<=1 OR ABS(B)<=1 THEN PTT=1 ELSE PTT=0
80 C=(WX-A*LX)/2 : D=(WY-LY*B)/2
90 CLS : PRINT A$
100 FOR I=0 TO LX
110 X1=C+A*I : Y1=D : X=X1+A
120 FOR J=0 TO LY
130 Y=Y1+B : U%(I,J,0)=POINT(I,J)
140 IF PTT=1 THEN PSET(X1,D+B*J),POINT(I,J) : GOTO 170
150 IF POINT(I,J)=1 THEN LINE(X1,Y1)-(X,Y),1,BF ELSE 170
160 U%(I,J,1)=(X+X1)/2 : U%(I,J,2)=(Y+Y1)/2
170 PSET(I,J),0 : Y1=Y
180 NEXT J,I
190 LOCATE 1,1 : PRINT"Press any key to modify it ....." : Z$=INPUT$(1)
200 IF PTT=1 THEN 240
210 FOR I=0 TO LX : FOR J=0 TO LY
220 IF U%(I,J,0)=1 THEN GOSUB 260
230 NEXT J,I
240 LOCATE 1,1 : PRINT"Press any key to be countinue ....."
250 Z$=INPUT$(1) : ERASE U% : GOTO 10
260 S=I : Z=J
270 IF S<LX AND Z<LY THEN IF U%(S+1,Z+1,0)=1 THEN P=S+1 : Q=Z+1 : GOSUB 300
280 IF S<LX AND Z>0 THEN IF U%(S+1,Z-1,0)=1 THEN P=S+1 : Q=Z-1 : GOSUB 300
290 RETURN
300 N1=U%(S,Z,1) : N2=U%(P,Q,1)
310 FOR N=N1 TO N2 STEP N2-N1 : FOR M=-B/2 TO B/2
320  LINE(N-A/2,U%(S,Z,2)+M)-(N+A/2,U%(P,Q,2)+M),1
330 NEXT M,N
340 RETURN
